rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }
    
    // Helper: Check if user is in whitelist with a specific role
    function isWhitelisted(role) {
      return isAuthenticated() && 
        get(/databases/$(database)/documents/whitelist/$(request.auth.token.email.lower())).data.role == role;
    }

    // Helper: extended check for admin (whitelist OR users collection OR hardcoded)
    function isAdmin() {
      return isAuthenticated() && (
        request.auth.token.email == 'ohad126@gmail.com' ||
        isWhitelisted('lab_admin') ||
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'lab_admin'
      );
    }
    
    // Helper: extended check for sampler
    function isSampler() {
      return isAuthenticated() && (
        isAdmin() ||
        isWhitelisted('sampler') ||
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'sampler'
      );
    }

    // Whitelist Collection:
    // - Read: Authenticated users can check if they are whitelisted
    // - Write: Only Admins can add/remove emails
    match /whitelist/{email} {
      allow read: if isAuthenticated();
      allow write: if isAdmin();
    }

    // Users collection:
    // - Users can read their own profile
    // - Users can write their OWN profile IF the data matches their whitelist role (Sync)
    match /users/{userId} {
      allow read: if isAuthenticated() && (request.auth.uid == userId || isAdmin());
      allow write: if isAdmin() || (
        request.auth.uid == userId && 
        isWhitelisted(request.resource.data.role)
      );
    }

    // Samples collection:
    // - Read: Public (Everyone can see the map)
    // - Write: Samplers and Admins
    match /samples/{sampleId} {
      allow read: if true;
      allow write: if isSampler();
    }
    
    // Lab Results / Data:
    match /results/{resultId} {
       allow read: if true; // Public read for map details
       allow write: if isAdmin(); // Only admins/lab can write results
    }

    // Activity Logs:
    // - Write: Authenticated users (so we can log their actions)
    // - Read: Admins only
    match /activity_logs/{logId} {
      allow create: if isAuthenticated(); // Anyone logged in can generate a log
      allow read: if isAdmin();
    }
  }
}
