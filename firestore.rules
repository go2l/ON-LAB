rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }
    
    // Helper function to check user role
    function hasRole(role) {
      return isAuthenticated() && 
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == role;
    }
    
    // Helper function to check if user is admin
    function isAdmin() {
      return hasRole('lab_admin');
    }
    
    // Helper function to check if user is sampler (or admin)
    function isSampler() {
      return hasRole('sampler') || isAdmin();
    }

    // Whitelist Collection:
    // - Read: Authenticated users can check if they are whitelisted
    // - Write: Only Admins can add/remove emails
    match /whitelist/{email} {
      allow read: if isAuthenticated();
      allow write: if isAdmin();
    }

    // Users collection:
    // - Users can read their own profile
    match /users/{userId} {
      allow read: if isAuthenticated() && (request.auth.uid == userId || isAdmin());
      allow write: if isAdmin();
    }

    // Samples collection:
    // - Read: Public (Everyone can see the map)
    // - Write: Samplers and Admins
    match /samples/{sampleId} {
      allow read: if true;
      allow write: if isSampler();
    }
    
    // Lab Results / Data:
    match /results/{resultId} {
       allow read: if true; // Public read for map details
       allow write: if isAdmin(); // Only admins/lab can write results
    }
  }
}
